#!/usr/bin/env python3
import shell
import yaml
import json
import util.strings
import logging
import os
import argh
import cli_gcp


def main(*selectors,
         state='all',
         region=os.environ['GCP_REGION'],
         project=os.environ['GCP_PROJECT']):
    zones = shell.run('gcp-zones --region', region).splitlines()
    for zone in zones:
        for instance in cli_gcp.ls(project, zone, selectors, state):
            print(cli_gcp.format(instance))

if __name__ == '__main__':
    with cli_gcp.setup():
        argh.dispatch_command(main)
